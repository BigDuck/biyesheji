<div data-am-widget="intro"
     class="am-intro am-cf am-intro-default">
    <div class="am-intro-hd">
        <h2 class="am-intro-title">你好管理员</h2>
    </div>
    <div class="am-g am-intro-bd">
        <div class="am-intro-left ds-avatar"><img
                src="${springMacroRequestContext.contextPath}/i/header.jpg" alt="管理员"/></div>
        <div class="am-intro-right am-u-sm-7"><strong>姓名:</strong><p class="default-color0 am-animation-right-spring">${user.name}</p>
        </div>
        <div class="am-intro-right am-u-sm-7"><strong>E-mail:</strong><p class="am-animation-scale-down">${user.email}</p>
        </div>
        <div class="am-intro-right am-u-sm-7"><strong>最后登录:</strong><p>${user.dob}</p>
        </div>
    </div>
</div>
